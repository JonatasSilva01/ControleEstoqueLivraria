@model ControleEstoqueLivraria.DATA.Models.Livro

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-between">

    <div class="col-md-6 d-flex justify-content-start align-items-end">
        <h2>Cadastro de Livro</h2>
    </div>

    <div class="col-md-6 d-flex justify-content-end align-items-end">
        <a class="btn btn-outline-dark" asp-action="Index">Voltar para Tabela</a>
    </div>

    <hr />
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">
                    <strong>Dados dos Livros</strong>
                </div>
                <div class="card-body">
                    <div class="row justify-content-around">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" id="campoNome"/>
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Autor" class="control-label"></label>
                                <input asp-for="Autor" class="form-control" id="campoAutor" />
                                <span asp-validation-for="Autor" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Editora" class="control-label"></label>
                                <input asp-for="Editora" class="form-control" id="campoEditora" />
                                <span asp-validation-for="Editora" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-success p-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
