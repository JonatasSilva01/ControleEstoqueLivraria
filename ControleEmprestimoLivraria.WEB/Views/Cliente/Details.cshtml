@model ControleEstoqueLivraria.DATA.Models.Cliente
@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Cliente</h1>
<hr />
<div class="row">
    <div class="d-flex justify-content-end">
        <div class="p-2">
            <a class="btn btn-dark" asp-action="Index">Voltar para Tabela</a>
        </div>
        <div class="p-2">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar Cliente</a>
        </div>
    </div>
    <div class="col-md-12 mt-2">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">
                    <strong>Dados Pessoais</strong>
                </div>
                <div class="card-body">
                    <div class="row justify-content-around">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Cpf" class="control-label"></label>
                                <input asp-for="Cpf" class="form-control" id="campoCpf" readonly/>
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" id="campoNome" readonly />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-2">
                <div class="card-header">
                    <strong>Endereço</strong>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Endereco" class="control-label"></label>
                        <input asp-for="Endereco" class="form-control" id="campoEndereco" readonly />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" readonly />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="form-control" readonly />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



