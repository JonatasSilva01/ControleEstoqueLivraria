<script src="/lib/jquery/dist/jquery.js"></script>
@model ControleEstoqueLivraria.DATA.Models.Cliente
@{
    ViewData["Title"] = "Criar";
}

<h1>Cadastra-se no sistema</h1>

<h4 class="fst-italic">Prencha seus dados no formulario</h4>

<hr />
<div class="row">
    <div class="d-flex justify-content-end">
        <div>
            <a class="btn btn-outline-dark" asp-action="Index">Voltar</a>
        </div>
    </div>

    <div class="col-md-12 mt-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">
                    <strong>Dados Pessoais</strong>
                </div>
                <div class="card-body">
                    <div class="row justify-content-around">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Cpf" class="control-label"></label>
                                <input asp-for="Cpf" class="form-control" id="campoCpf"/>
                                <span asp-validation-for="Cpf" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" id="campoNome" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-2">
                <div class="card-header">
                    <strong>Endereço</strong>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Endereco" class="control-label"></label>
                        <input asp-for="Endereco" class="form-control" id="campoEndereco" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" name="cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" name="bairro" class="form-control" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Incluir" class="btn btn-success p-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() { 
            // tentar colocar mascaras nos CPF e CEP
            $('#campoCpf').mask('000.000.000-00');
            $('#campoEndereco').mask('00000-000');
        })
    </script>
}
